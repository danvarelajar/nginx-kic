apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: arcadia-ingress
  annotations:
    appprotect.f5.com/app-protect-policy: "default/default-security"
    appprotect.f5.com/app-protect-enable: "True"
    appprotect.f5.com/app-protect-security-log-enable: "True"
    appprotect.f5.com/app-protect-security-log: "default/logconf"
    appprotect.f5.com/app-protect-security-log-destination: "syslog:server=10.0.60.33:514"
spec:
  ingressClassName: nginxplus-nap
  rules:
  - host: arcadia1.example.local
    http:
      paths:
      - path: /
        backend:
          serviceName: main
          servicePort: 80
      - path: /files
        backend:
          serviceName: backend
          servicePort: 80
      - path: /api
        backend:
          serviceName: app2
          servicePort: 80
      - path: /app3
        backend:
          serviceName: app3
          servicePort: 80
