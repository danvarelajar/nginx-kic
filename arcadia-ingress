apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: arcadia-ingress
spec:
  ingressClassName: nginx
  rules:
  - host: arcadia1.example.local
    http:
      paths:
      - path: /
        backend:
          serviceName: main
          servicePort: 30511
      - path: /files
        backend:
          serviceName: backend
          servicePort: 31584
      - path: /api
        backend:
          serviceName: app2
          servicePort: 30362
      - path: /app3
        backend:
          serviceName: app3
          servicePort: 31662
